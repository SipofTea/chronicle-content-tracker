extends ../layout

block content
  if (message.length > 0)
    #alert
      p= message
  .d-flex.justify-content-center.align-items-center
    .registration-wrapper.d-flex.flex-column.justify-content-center.align-items-center
      h1 #{title}
      .input-group.mb-3.d-flex.flex-column.justify-content-center.align-items-center
        form(name='log-in-form', action='/session', method='POST')
            .label 
            .email
              input.form-control(required type="email", name="email", placeholder="email" autocomplete="email")
            .password
              input.form-control(required type="password", name="password", placeholder="password")
            button.btn.btn-block.form-control(type="submit", value="Submit" id='log-in-button') Log In
      p.d-flex.flex-column.justify-content-center.align-items-center
        | Don't have an account? 
        br
        a(href="/users/new") Sign Up Here 
