extends ../layout

block content
  .registration-wrapper.d-flex.flex-column.justify-content-center.align-items-center
    h1 #{title}
    .input-group.mb-3.d-flex.flex-column.justify-content-center.align-items-center
      form(class='sign-up-form form', action='/users', method='POST', autocomplete='off')
          .label 
          .username
            input.form-control(required type="text", name="username", placeholder="username")
          .email
            input.form-control(required type="email", name="email", placeholder="email")
          .password
            input.form-control(required type="password", name="password", placeholder="password")
          button.btn.btn-block.form-control(type="submit", value="Submit" id='sign-up-button') Sign Up
    p
      | Already a member? 
      break 
      a(href="/session/new") Log In Here
